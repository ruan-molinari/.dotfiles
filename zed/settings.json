{
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "model": "claude-sonnet-4.5",
      "provider": "copilot_chat"
    },
    "enabled": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extensions": {
    "json": true,
    "make": true,
    "nix": true,
    "toml": true,
    "zig": true,
    "dockerfile": true,
    "zed-legacy-themes": true,
    "wakatime": true,
    "discord-presence": true
  },
  "format_on_save": "on",
  "vim_mode": true,
  "lsp": {
    "zls": {
      "binary": {
        "path": "/Users/ruan/.zvm/bin/zls"
      },
      "settings": {
        "zls": {
          "zig_exe_path": "/Users/ruan/.zvm/bin/zig"
        }
      }
    }
  },
  "terminal": {
    "shell": "system",
    "env": {
      "TERM": "alacritty"
    }
  },
  "theme": "Zed Legacy: Ros√© Pine Moon",

  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "Zig": {
      "formatter": "language_server",
      "format_on_save": "on",
      "language_servers": ["zls", "..."]
    }
  }
}
