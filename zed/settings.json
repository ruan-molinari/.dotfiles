{
  "git_panel": {
    "dock": "left"
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "default_model": {
      "model": "claude-sonnet-4.5",
      "provider": "copilot_chat"
    },
    "enabled": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extensions": {
    "json": true,
    "make": true,
    "nix": true,
    "toml": true,
    "zig": true,
    "dockerfile": true,
    "zed-legacy-themes": true,
    "wakatime": true,
    "discord-presence": true
  },
  "format_on_save": "on",
  "vim_mode": true,
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allFeatures": true
        },
        "binary": {
          "ignore_system_version": true,
          "path": "/usr/lib/rustup/bin/rust-analyzer"
        }
      }
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "nushell"
      }
    },
    "env": {
      "TERM": "alacritty"
    }
  },
  "theme": {
    "dark": "Zed Legacy: Rosé Pine Moon",
    "light": "Zed Legacy: Rosé Pine Dawn",
    "mode": "system"
  },

  "languages": {
    "TypeScript": {
      "auto_indent": true,
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    }
  }
}
